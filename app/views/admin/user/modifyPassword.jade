extends ../layout

block content
    if formInvalids && formInvalids.length
        .error
        each f in formInvalids
            p.alert.alert-danger=f.msg
    .panel.panel-primary
        .panel-heading
            h3.panel-title 修改密码
        .panel-body
            form.form-horizontal(method="post" action="/admin/users/modifyPassword")
                .form-group
                    label.col-sm-1.control-label(for="password") 旧密码
                    .col-sm-11
                        input.form-control#password(type="password",placeholder="旧密码",name="password",value= password,required)
                .form-group
                    label.col-sm-1.control-label(for="newPassword") 新密码
                    .col-sm-11
                        input.form-control#newPassword(type="password",placeholder="新密码",name="newPassword",value= newPassword,required)
                .form-group
                    label.col-sm-1.control-label
                    .col-sm-11
                        button.btn.btn-default(type="submit") 修改
